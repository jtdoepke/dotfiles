#!/bin/sh

# Install basic packages
sudo apt-get update -y
sudo apt-get install -y \
	asciinema \
	audacity \
	autoconf \
	automake \
	autossh \
	build-essential \
	bzip2 \
	gawk \
	gimp \
	git \
	git-crypt \
	git-email \
	git-extras \
	git-lfs \
	git-svn \
	gnome-tweaks \
	gzip \
	httpie \
	i3 \
	jq \
	magic-wormhole \
	make \
	mosh \
	neovim \
	openssh-client \
	p7zip-full \
	python \
	python-pip \
	python-virtualenv \
	python3 \
	python3-pip \
	python3-virtualenv \
	ranger \
	rclone \
	rsync \
	shellcheck \
	software-properties-common \
	subversion \
	tar \
	thefuck \
	tmux \
	ufw \
	unattended-upgrades \
	unzip \
	vim \
	vlc \
	wget \
	xz-utils \
	zip

# Install snap packages
sudo snap install \
	bw \
	bitwarden \
	spotify
sudo snap install --classic \
	go \
	skype \
	slack

# Install asdf-vm
sudo apt-get install -y \
	automake autoconf libreadline-dev \
	libncurses-dev libssl-dev libyaml-dev \
	libxslt-dev libffi-dev libtool unixodbc-dev \
	unzip curl
if [ ! -d ~/.asdf ]; then
	git clone https://github.com/asdf-vm/asdf.git ~/.asdf
fi
cd ~/.asdf
git checkout "$(git describe --abbrev=0 --tags)"

# Install peek
sudo add-apt-repository -y ppa:peek-developers/stable
sudo apt-get update -y
sudo apt-get install -y peek

# Install GPG/YubiKey/Security Packages
sudo add-apt-repository -y ppa:yubico/stable
sudo apt-get update -y
sudo apt-get install \
	cryptsetup \
	dbus-user-session \
	gpg \
	libpam-u2f \
	libpam-yubico \
	pass \
	pcsc-tools \
	pcscd \
	pinentry-gnome3 \
	scdaemon \
	secure-delete \
	signing-party \
	yubikey-luks \
	yubikey-manager-qt \
	yubikey-personalization-gui \
	yubikey-piv-manager \
	yubioath-desktop
## Install YubiKey udev rules
sudo wget -O /etc/udev/rules.d/70-u2f.rules https://raw.githubusercontent.com/Yubico/libu2f-host/master/70-u2f.rules
sudo wget -O /etc/udev/rules.d/69-yubikey.rules https://raw.githubusercontent.com/Yubico/yubikey-personalization/master/69-yubikey.rules
sudo wget -O /etc/udev/rules.d/70-yubikey.rules https://raw.githubusercontent.com/Yubico/yubikey-personalization/master/70-yubikey.rules

# Install Chrome
wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
sudo sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main"
> /etc/apt/sources.list.d/google-chrome.list'
sudo apt-get update -y
sudo apt-get install -y google-chrome-stable

# Install alacritty
sudo add-apt-repository -y ppa:mmstick76/alacritty
sudo apt-get update -y
sudo apt-get install -y alacritty

# Install golang
sudo add-apt-repository -y ppa:longsleep/golang-backports
sudo apt-get -y update
sudo apt-get -y install golang-go

# Install fzf
if [ ! -d ~/.fzf ]; then
	git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf;
	~/.fzf/install --all;
fi

# Install fish-shell.
sudo apt-add-repository -y ppa:fish-shell/release-3
sudo apt-get update -y
sudo apt-get install fish
## Set default shell to fish.
sudo chsh -s "$(which fish)" "{{ .chezmoi.username }}"
## Install fisher plugins.
fish -c '
fisher self-update;
fisher add 0rax/fish-bd;
fisher add edc/bass;
fisher add fisherman/getopts;
fisher add fisherman/z;
fisher add jethrokuan/fzf;
fisher add laughedelic/pisces;
fisher add matchai/spacefish;
fisher add oh-my-fish/plugin-thefuck;
fisher add spentacular/asdf-fish;
'

{{ end -}}
